<!-- XML code by: Brian/Pain Based largely upon an example by Demetriou - Based largely upon an example by Grinning Fool - ( this xml file is a chain letter ) -->

<UIScene name="SCREEN_ENTERSTATUS" width=550 height=30 
    x="460" y="650" 
    draggable="true" idleexpiretime="1.0" scriptloadable="true" 
	priority="SCENE_SCRIPT" modal="false"
    OnAdd=UIScene_OnAdd_SetFocus(INPUT_BOX)
    />

    <!-- Prompt next to the input box -->

	<UIButton name="languageOn-btn" width="85" height="20" y="6" x="8" 
	OnToolTip=UIObject_Tooltip_DisplayTooltipString("Select_Status_Message",OBJECT_X,OBJECT_Y,SCREEN_TOOLTIP_2,ALIGN_NONE,ALIGN_NONE,0,0,ALIGN_LEFT) 
	OnLeftClick0="UIObject_Misc_ExecuteServerScript(gui_csl_playerlist,SetStatus,local:1,local:0)"
	OnLeftClick1="UIButton_Input_ScreenClose()"
	 >
		<UIFrame state="base"	fill="b_empty.tga" />
		<UIFrame state="up"		fill="b_empty.tga" />
		<UIFrame state="down"	fill="b_overlay_active.tga" alpha="0.7" />
		<UIFrame state="focused"	fill="b_empty.tga" />
		<UIFrame state="hilited"	fill="b_overlay_active.tga" alpha="0.45" />
		<UIFrame state="hifocus"	fill="b_overlay_active.tga" alpha="0.45"/>
	</UIButton>	


    <UIText name="STATUS_TITLE" text="Status Message:" fontfamily="Body_Font" style=3 y="9" x="8" width="90" 
        height=24 color="EEEEEE" sizetofit="false" align="center" editable="false"/>

	<!-- text input box -->
    <UIText name="INPUT_BOX" x=110 y=9 width=405 height=48 editable="true" sanitized="true" 
        allowspace="true" maxlength=25 allowpunc="false" multiline="false" scaleytoparent="true" scalewidthtoparent="true" 
        fontfamily="International" selectable="true" update="true"
        OnUpdate=UIObject_Misc_SetLocalVarString(local:0)
        OnLostFocus=UIObject_Misc_SetLocalVarString(local:0)
        OnReturn0="UIObject_Misc_ExecuteServerScript(gui_csl_playerlist,SetStatus,local:1,local:0)"
        OnReturn1="UIButton_Input_ScreenClose()"
    />
    
	<UIButton name="CloseButton" x=522 y=ALIGN_CENTER style="STYLE_CLOSE_BUTTON" 
 		OnToolTip=UIObject_Tooltip_DisplayTooltipString("Cancel",OBJECT_X,OBJECT_Y,SCREEN_TOOLTIP_2,ALIGN_NONE,ALIGN_NONE,0,0,ALIGN_LEFT)
 		OnLeftClick="UIButton_Input_ScreenClose()"
 		
 	/>	

    <!-- Input Frame-->
	<UIFrame x=0 y=ALIGN_CENTER width=550 height=28 topleft="frame_main_d_TL.tga" topright="tp_frame_tr.tga" 
        bottomleft="tp_frame_bl.tga"
		bottomright="tp_frame_BR.tga" top="tp_frame_t.tga" bottom="tp_frame_b.tga"
		left="tp_frame_l.tga" right="tp_frame_r.tga"
		border=5 />

    <UIIcon name="messagebackground" x="0" y="0" img="fx_white.tga" width=PARENT_WIDTH height=PARENT_HEIGHT color="2F000000" alpha="0.18" />    